<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="fill_parent"
    android:layout_height="fill_parent" android:background="#FFF0F8FF">
    <LinearLayout android:layout_width="fill_parent"
        android:layout_height="fill_parent" android:orientation="vertical"
        android:id="@+id/Body" android:layout_centerHorizontal="true"
        android:layout_centerInParent="true">
        <LinearLayout android:id="@+id/FrameLayout01"
             android:layout_gravity="center"
            android:layout_width="fill_parent" android:layout_height="fill_parent"
            android:layout_marginTop="20sp"

            android:layout_weight="3"></LinearLayout>
        <TableLayout android:id="@+id/TableLayout01"
            android:layout_width="fill_parent" android:layout_height="fill_parent"
            android:layout_margin="5px" android:layout_weight="1"
            android:gravity="center">
            <TableRow android:id="@+id/TableRow01" android:layout_width="fill_parent"
                android:layout_height="fill_parent" android:gravity="center">
                <Button android:layout_width="88sp"
                    android:layout_height="88sp" android:id="@+id/Button01"
                    android:layout_margin="5px" android:background="@drawable/game_button"
                    android:textSize="20dp"
                    ></Button>
                <Button android:layout_width="88sp"
                    android:layout_height="88sp" android:id="@+id/Button02"
                    android:layout_margin="5px" android:background="@drawable/game_button" android:textSize="20dp"></Button>
                <Button android:id="@+id/Button03"
                    android:layout_width="88sp"
                    android:layout_height="88sp"
                    android:layout_margin="5px" android:background="@drawable/game_button" android:textSize="20dp"></Button>
                <Button android:layout_width="88sp"
                    android:layout_height="88sp" android:id="@+id/Button04"
                    android:layout_margin="5px" android:background="@drawable/game_button" android:textSize="20dp"></Button>



            </TableRow>
            <TableRow android:layout_width="fill_parent"
                android:gravity="center" android:layout_height="fill_parent"
                android:id="@+id/TableRow02">
                <Button android:layout_width="88sp"
                    android:layout_height="88sp" android:id="@+id/Button05"
                    android:layout_margin="5px" android:background="@drawable/game_button" android:textSize="20dp"></Button>
                <Button android:layout_width="88sp"
                    android:layout_height="88sp" android:id="@+id/Button06"
                    android:layout_margin="5px" android:background="@drawable/game_button" android:textSize="20dp"></Button>
                <Button android:layout_width="88sp"
                    android:layout_height="88sp" android:id="@+id/Button07"
                    android:layout_margin="5px" android:background="@drawable/game_button" android:textSize="20dp"></Button>
                <Button android:layout_width="88sp"
                    android:layout_height="88sp" android:id="@+id/Button08"
                    android:layout_margin="5px" android:background="@drawable/game_button" android:textSize="20dp"></Button>



            </TableRow>
            <TableRow android:layout_width="fill_parent"
                android:gravity="center" android:layout_height="fill_parent"
                android:id="@+id/TableRow03">
                <Button android:layout_width="88sp"
                    android:layout_height="88sp" android:id="@+id/Button09"
                    android:layout_margin="5px" android:background="@drawable/game_button" android:textSize="20dp"></Button>
                <Button android:layout_width="88sp"
                    android:layout_height="88sp" android:id="@+id/Button10"
                    android:layout_margin="5px" android:background="@drawable/game_button" android:textSize="20dp"></Button>
                <Button android:layout_width="88sp"
                    android:layout_height="88sp" android:id="@+id/Button11"
                    android:layout_margin="5px" android:background="@drawable/game_button" android:textSize="20dp"></Button>
                <Button android:layout_width="88sp"
                    android:layout_height="88sp"  android:id="@+id/Button12"
                    android:layout_margin="5px" android:background="@drawable/game_button" android:textSize="20dp"></Button>



            </TableRow>
            <TableRow android:layout_width="fill_parent"
                android:gravity="center" android:layout_height="fill_parent"
                android:id="@+id/TableRow04">
                <Button android:layout_width="88sp"
                    android:layout_height="88sp" android:id="@+id/Button13"
                    android:layout_margin="5px" android:background="@drawable/game_button" android:textSize="20dp"></Button>
                <Button android:layout_width="88sp"
                    android:layout_height="88sp" android:id="@+id/Button14"
                    android:layout_margin="5px" android:background="@drawable/game_button" android:textSize="20dp"></Button>
                <Button android:layout_width="88sp"
                    android:layout_height="88sp" android:id="@+id/Button15"
                    android:layout_margin="5px" android:background="@drawable/game_button" android:textSize="20dp"></Button>
                <Button android:layout_width="88sp"
                    android:layout_height="88sp"  android:id="@+id/Button16"
                    android:layout_margin="5px" android:background="@drawable/game_button" android:textSize="20dp"></Button>
            </TableRow>



        </TableLayout>
        <LinearLayout android:id="@+id/LinearLayout01"
            android:layout_width="fill_parent" android:layout_height="fill_parent"
            android:orientation="horizontal"
            android:layout_weight="3"
            android:weightSum="1">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text=""
                android:textSize="20pt"
                android:paddingLeft="20dp"
                android:paddingTop="10dp"
                android:id="@+id/gamescore"

                android:layout_weight="0.22" />


        </LinearLayout>


    </LinearLayout>


</RelativeLayout>
