<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:background="#FFFFFF"
    android:paddingLeft="16dp"
    android:paddingRight="16dp"
    android:paddingTop="16dp">
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/showDialog"
        android:background="@drawable/plusbtn"
        android:layout_gravity="center"/>
    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/deleteWord"
        android:background="@drawable/minusbtn"
        android:layout_gravity="center"/>
        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/hideMeaning"
            android:background="@drawable/hideword"
            android:layout_gravity="center"/>
        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/showMeaning"
            android:background="@drawable/showword"
            android:layout_gravity="center"/>
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/sendEmail"
            android:background="@drawable/mail"
            android:layout_gravity="center"/>

    </LinearLayout>

    <ListView
        android:id="@+id/listView"
        android:background="#FFFFFF"
        android:cacheColorHint="#FFFFFF"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"

        >
    </ListView>


</LinearLayout>